<Window x:Name="Paint"
        x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#7F7F7F" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="534*"/>
            <ColumnDefinition Width="133*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <InkCanvas PreviewMouseLeftButtonDown="StandardCanvas_MouseDown" PreviewMouseUp="StandardCanvas_MouseUp" MouseMove="StandardCanvas_MouseMove"
                   Grid.Column="2" Grid.Row="1" Name="StandardCanvas" HorizontalAlignment="Center" VerticalAlignment="Center" Background="white" Height="1928" Width="3220" />
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,-1,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Width="108" Grid.ColumnSpan="2">
            <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SaveButtonClick" Width="50" Height="20"/>
            <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoadButtonClick" Width="50" Height="20"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="124,-6,415,2" Grid.ColumnSpan="2" Grid.Column="1">
            <Button Content="Undo" HorizontalAlignment="Left"  VerticalAlignment="bottom" Click="UndoButton"/>
            <Button Content="Redo" HorizontalAlignment="Left" VerticalAlignment="bottom" Click="RedoButton" Width="42"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Margin="0,62,0,0" Grid.RowSpan="2">
            <Label Content="Size"/>
            <Slider x:Name="SizeSlider" Width="108" ValueChanged="SizeSliderValueChanged"/>
            <Button Content="Eraser" HorizontalAlignment="right"  VerticalAlignment="Top" Click="ButtonEraserTool"/>
            <Button Content="Pencil" HorizontalAlignment="right" VerticalAlignment="Top" Click="ButtonPencilTool"/>
            
            <Button Content="Line" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ButtonLineTool"/>
            

        </StackPanel>
    </Grid>
</Window>
